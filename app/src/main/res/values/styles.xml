<resources>


    <style name="BlueTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark" />

    <!-- Base application theme. -->
    <!--Blue Theme-->
    <style name="BlueTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/primary_blue</item>
        <item name="colorPrimaryDark">@color/primaryDark_blue</item>
        <item name="colorAccent">@color/accent_blue</item>
        <item name="android:statusBarColor">@color/primaryDark_blue</item>
        <item name="android:colorBackground">@color/background_blue_dark</item>
        <item name="android:navigationBarColor">@color/primaryDark_blue</item>
        <item name="android:textColorSecondary">@color/secondary_text_white</item>

        <item name="transpImgColor">@color/transp_primary_blue</item>
        <item name="lightColor">@color/light_blue</item>
        <item name="lighterColor">@color/light_blue</item>

        <item name="buildingListElement">@color/primary_blue</item>
        <item name="calElemBg">@color/calendar_element_blue</item>

        <item name="android:fastScrollTextColor">@color/background_blue_dark</item>

    </style>
    <style name="DialogBlueTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@color/primaryDark_blue</item>
        <item name="dialogPrimary">@color/primary_blue</item>
        <item name="colorAccent">@color/accent_blue</item>
        <item name="android:textColor">@color/secondary_text_white</item>
        <item name="android:fontFamily">sans-serif-thin</item>
    </style>
